/* miniprogram/pages/account/orderHistory/confirmOrder/confirmOrder.wxss */
.hint {
  padding: 11px;
  text-align: center;
  background-color: #e4f5f4;
}

.hint text {
  font-size: 16px;
  color: #6d7278;
}

.dealerList {
  display: flex;
  flex-direction: column;
}

.dealerCard {
  display: flex;
  padding: 20px 20px 22px 30px;
}

.dealerCard .imgBox {
  width: 62px;
  height: 62px;
  position: relative;
}

.dealerCard .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.dealerCard .dealerInfo {
  display: flex;
  flex: 1;
  margin-left: 22px;
  flex-direction: column;
  justify-content: space-between;
  color: #6d7278;
}

.copyBtn {
  min-width: 17%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.copyBtn text {
  color: #6d7278;
  font-size: 12px;
}

.dealerCard .copy {
  width: 20px;
  height: 22px;
  object-fit: fill;
}

.correct {
  width: 24px;
  height: 24px;
}

.totalPayment {
  background-color: #F4F4F4;
  border-radius: 6px;
  margin: 20px 13px;
  padding: 6px 17px;
}

.totalPayment text {
  color: #6D7278;
  float: right;
}

@media (min-height: 720px) {
  .btnArea {
    padding-bottom: 50px;
  }
}