<view class="header">
  <view class="tapLeft" bindtap="onNavigate" data-path="customer">
    <image src="../../image/follower.png"></image>
    <text>客户端 | {{childNumber}}</text>
    <view wx:if="{{waitForPayment}}" class="redDot follower"></view>
  </view>
  <view class="openData">
    <view class="avatar-box">
      <block wx:if="{{avatarUrl}}">
        <image src="{{avatarUrl}}" class='user-info-avatar'></image>
      </block>
      <block wx:else>
        <mp-icon icon='me' size='25'></mp-icon>
      </block>
    </view>
    <text class="nickname" lang="zh_CN">{{username}}</text>
  </view>
  <view class="tapRight" bindtap="onNavigate" data-path="dealer">
    <image src="../../image/follows.png"></image>
    <text>供应端 | {{fatherNumber}}</text>
    <view wx:if="{{needToPay}}" class="redDot"></view>
  </view>
</view>
<view class="nav account">
  <view class="item" bindtap="onNavigate" data-path="store">
    <image src="../../image/store.png"></image>
    <text>我的在售</text>
  </view>
  <view class="item" bindtap="onNavigate" data-path="warehouse">
    <image src="../../image/warehouse.png"></image>
    <text>{{hasWarehouse?"仓库管理":"我要买货"}}</text>
  </view>
  <view class="item myOrder" bindtap="onNavigate" data-path="order">
    <view wx:if="{{waitForPayment}}" class="redDot"></view>
    <image src="../../image/order.png"></image>
    <text>销售记录</text>
  </view>
  <view class="item myOrder" bindtap="onNavigate" data-path="history">
    <image src="../../image/history.png"></image>
    <text>采购记录</text>
  </view>
  <view class="item" bindtap="onNavigate" data-path="invitation">
    <image src="../../image/couponCode.png" class="couponCode"></image>
    <text>邀请客户</text>
  </view>
  <view class="item" bindtap="onNavigate" data-path="connection">
    <image src="../../image/plainCode.png" class="couponCode"></image>
    <text>输入邀请码</text>
  </view>
</view>