.instruction {
  margin: 20px 16px;
  padding: 16px;
  text-align: center;
  background-color: #E4F5F4;
  color: #6D7278;
  border-radius: 6px;
}

.instruction text,
.register text {
  color: #6D7278;
  font-size: 14px;
}

.register {
  display: flex;
  flex-direction: column;
}

.card.register {
  padding: 20px;
}

.register .title,
.item {
  padding: 9px 4px;
}

.item .value {
  font-weight: 500;
}

.phoneInputGroup {
  margin: 16px 24px 2px 30px;
  display: flex;
}

.phoneInputGroup .regionCode {
  width: 150rpx;
}

.picker {
  border: 1px solid rgba(0, 0, 0, 0.25);
  position: relative;
  padding: 4px 8px;
  color: #6D7278;
}

.picker::after {
  position: absolute;
  display: block;
  right: 16rpx;
  top: 26rpx;
  content: '';
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top: 10rpx solid #999;
}

.phoneInputGroup .phone {
  padding: 4px 8px;
  flex-grow: 1;
  border: 1px solid rgba(0, 0, 0, 0.25);
  margin-left: 10px;
}

.phone input {
  font-size: 16px;
  color: #6D7278;
}

.btnArea {
  margin-top: 17px;
  padding-left: 220px;
}

.btnArea .newEmail {
  padding: 5px 0;
  border-radius: 16px;
  font-size: 14px;
}

.container {
  padding: 15px;
}

.container .text {
  margin: 80px auto;
  color: #000000;
  font-size: 16px;
  font-weight: 300;
  text-align: center;
}

.container .text .bold {
  font-size: 16px;
  color: #000000;
  font-weight: 500;
}

.submit {
  width: 88%;
  font-size: 16px;
  padding-top: 7px;
  padding-bottom: 7px;
  border-radius: 6px;
}