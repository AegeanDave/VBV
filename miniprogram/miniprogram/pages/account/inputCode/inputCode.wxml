<mp-form-page class="card inputBox">
  <text>请输入您的邀请码来添加好友</text>
  <form bindsubmit='formSubmit'>
    <input name="code" value="{{currentValue}}" bindinput="onInputChange"></input>
    <view class="btnArea">
      <button form-type="submit" class="newCode confirm" disabled="{{!currentValue}}">确认</button>
    </view>
  </form>
</mp-form-page>
<pop-up show="{{showPopup}}" showCancel="">
  <view class="popupContainer">
    <image src="../../image/logo.png" class="logo"></image>
    <text>您已收到好友邀请码，即刻开始购物</text>
  </view>
</pop-up>