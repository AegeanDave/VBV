<view class="orderBox">
  <view class="boxHeader">
    <view class="item">
      <text>买家: {{order.buyer.name}}</text>
    </view>
    <view class="item">
      <text>订单状态：</text>
      <text wx:if="{{order.status==='Unpaid'}}" class="unpaid">未付款</text>
      <text wx:else>已付款</text>
    </view>
  </view>
  <view class="productList">
    <view class="orderInfo">
      <text>订单编号: {{order.orderNumber}}</text>
    </view>
    <scroll-view scroll-y="true">
      <block wx:for="{{order.orderProducts}}" wx:key="id" wx:for-item="product">
        <view class="productCard">
          <image src="{{product.coverImageURL}}"></image>
          <view class="productInfo">
            <text class="price">￥{{product.price}}</text>
            <text>{{product.productName}}</text>
            <text>数量：{{product.quantity}}</text>
          </view>
        </view>
      </block>
    </scroll-view>
    <view class="orderInfo">
      <text>更新时间: {{order.createdAt}}</text>
    </view>
  </view>
</view>
<view class="btnField">
  <button open-type="share">分享</button>
  <button bindtap="bindBack">取消</button>
</view>