.hint {
  padding: 11px;
  text-align: center;
  background-color: #e4f5f4;
}

.hint text {
  font-size: 16px;
  color: #6d7278;
}

.dealerList {
  display: flex;
  flex-direction: column;
}

.dealerCard {
  display: flex;
  padding: 20px 34px 22px 30px;
}

.dealerCard .imgBox {
  width: 120rpx;
  height: 120rpx;
  position: relative;
}

.dealerCard .avatar {
  width: 62px;
  height: 62px;
  border-radius: 50%;
}

.dealerCard .dealerInfo {
  display: flex;
  flex: 1;
  margin-left: 22px;
  flex-direction: column;
  justify-content: space-between;
  color: #6d7278;
}

.copyBtn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.copyBtn text {
  color: #6d7278;
  font-size: 12px;
}

.dealerCard .copy {
  width: 20px;
  height: 22px;
  object-fit: fill;
}

.btnArea {
  width: calc(100% - 68px);
  position: fixed;
  bottom: 0;
  right: 0;
  padding: 34px 34px 20px 34px;
  background-color: #fff;
}

.btnArea button {
  padding: 12px 0;
  font-size: 16px;
}

@media (min-height: 720px) {
  .btnArea {
    padding-bottom: 50px;
  }
}
