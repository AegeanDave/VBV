.mainBox {
  padding: 22px 18px;
}

.infoBox {
  padding: 22px 34px;
  text-align: center;
  background-color: #e4f5f4;
}

.infoBox text {
  color: #333;
  font-size: 16px;
  line-height: 22px;
}

.previewBox {
  margin-top: 46px;
  display: flex;
  justify-content: space-around;
}

.mask, .previewBox image {
  height: 108px;
  width: 108px;
  border-radius: 5px;
}

.mask {
  background-color: #e4f5f4;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hasImage {
  position: relative;
}

.previewBox .minus {
  width: 29px;
  height: 29px;
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 999;
  opacity: 0.59;
  border-radius: 4px;
  background-color: #000;
  color: #fff;
}

.previewBox .deleteSign {
  height: 61px;
  width: 61px;
}

.btnArea {
  margin-top: 40vh;
  padding: 0 62px;
}

.btnArea button {
  font-size: 16px;
  padding: 8px;
  background-color: #02a69f;
  color: #fff;
}
