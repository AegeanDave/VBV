/**index.wxss**/
text {
  font-size: 12px;
}

.dealerContainer {
  background-color: #F5F0FA ;
  display: flex;
  flex-direction: column;
  padding-top: 8px;
  padding-left: 16px;
  padding-bottom: 10px;
}
.dealer-list-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-right: 20px;
}

.dealerContainer .title {
  color: #0aa8a2;
  font-size: 14px;
  letter-spacing: 0.26px;
}

.scrollH {
  width: 78%;
  white-space: nowrap;
}

.outerBorder {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  border: 4px solid #F5F0FA ;
  border-radius: 50%;
}

.outerBorder.selected {
  border-color: #02a69f;
}

.dealer-list {
  display: flex;
  margin-top: 4px;
}

.dealer.all {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
}

.innerContainer {
  display: flex;
}

.dealer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.dealer .avatarContainer {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #f3f3f3;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dealer .avatar {
  width: 94rpx;
  height: 94rpx;
  border-radius: 50%;
}

.placeholder {
  width: 45px;
  height: 23px;
  object-fit: contain;
}

.dealer .name {
  font-size: 12px;
  max-width: 23vw;
  color: #72767c;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.productList {
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #6d7278;
  padding-top: 140rpx;
}

.empty text {
  font-size: 14px;
  line-height: 20px;
  color: rgba(0, 0, 0, 0.5);
}

.empty button {
  margin: 20px;
  padding: 8px 18px;
  color: #fff;
  background-color: #02a69f;
}

.productCardImage {
  max-width: 41vw;
  height: 41vw;
  border-radius: 6px;
  object-fit: cover;
  align-self: center;
}

.productCard.home {
  width: fit-content;
  padding: 16rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  border: none;
  padding-bottom: 10px;
  margin-bottom: 10rpx;
}

.productCard .name {
  max-width: 36.5vw;
  font-size: 16px;
  color: #353535;
  margin-top: 3px;
  margin-bottom: 2px;
}

.price,
.name {
  overflow-wrap: break-word;
}

.price text {
  color: #02A69F;
  font-size: 14px;
}

.tagField {
  margin-top: 6px;
  display: flex;
}

.tag {
  background-color: #98dbd8;
  color: #fff;
}