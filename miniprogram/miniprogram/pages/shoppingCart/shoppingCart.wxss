.empty {
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: calc(100vh - 81px);
}

.empty text {
  margin-top: 14px;
  color: #6d7278;
  font-size: 14px;
  line-height: 24px;
}

.cart {
  margin-top: 21px;
  margin-bottom: 60px;
}

.productCard {
  position: relative;
  padding: 16rpx;
}

.productCard.disabled {
  opacity: 0.7
}

.pic {
  width: 28vw;
  height: 28vw;
  object-fit: contain;
}

.name.inCart {
  width: 52vw;
  color: #6d7278;
  font-size: 17px;
  line-height: 24px;
}

.price {
  font-size: 21px;
  font-weight: 600;
  line-height: 29px;
  color: #02a69f;
}

.disabled {
  color: #E02020;
}

.delete {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 1000;
}

.delete image {
  width: 13px;
  height: 14px;
  object-fit: fill;
  padding: 4px 3px 5px 5px;
}

.amount {
  position: absolute;
  display: flex;
  bottom: 22px;
  right: 19px;
  justify-content: space-around;
  align-items: center;
  z-index: 1;
}

.plus,
.reduce {
  width: 9vw;
  font-size: 24px;
  background-color: #ffff;
  height: 32px;
  line-height: 32px;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #02a69f;
}

.plus,
.reduce,
.plus::after,
.reduce::after {
  border: none;
  border-radius: 0;
}

.reduce[disabled],
.plus[disabled] {
  color: #babcbc !important;
  background-color: #fff !important;
}

.input {
  max-width: 8.3vw;
  color: #6d7278;
  font-size: 16px;
  letter-spacing: 0.24px;
  line-height: 22px;
  text-align: center;
}

.credential {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f7f7f7;
  margin: 0 15px 19px 15px;
  padding: 5px 0;
}

.credential image {
  width: 13px;
  height: 13px;
  margin-right: 4px;
}

.credential text {
  color: #c4c4c4;
  font-size: 14px;
}