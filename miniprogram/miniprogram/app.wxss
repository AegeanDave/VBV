/**app.wxss**/

page {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
  font-family: "PingFang SC";
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.hint {
  width: 100%;
  padding: 5px;
  text-align: center;
  background-color: #d8d8d8;
}

.tagField {
  margin-top: 6px;
  display: flex;
}

.tag {
  width: 136rpx;
  font-size: 12px;
  letter-spacing: 0.18px;
  border-radius: 10px;
  background-color: #98dbd8;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 9px;
}

.tag.pending {
  background-color: #F7F0CD;
}

.tag.unpaid {
  background-color: #FFCBCB;
}

.tag.shipping {
  background-color: #ABE79F;
}

.tag.canceled {
  background-color: #FFA890;
}

.tag:first-child {
  margin-left: 0;
}

scroll-view.detail text {
  padding: 10px 0;
}

.btnBox {
  width: 100%;
  box-sizing: border-box;
  padding: 12px 21px;
  position: fixed;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 1;
  background-color: #fff;
}

.card {
  box-shadow: 0 0 5px 2px rgba(139, 139, 139, 0.1);
  border-radius: 10px;
  background-color: #ffffff;
  margin: 8px 16px;
}

.card:first-child {
  margin-top: 16px;
}

.card.disabled {
  box-shadow: none;
}

.card text {
  font-size: 14px;
}

.firstNoBorder {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  padding-top: 14px;
}

.firstNoBorder:first-child {
  border-top: none;
  padding-top: 0;
}

.cardHeader {
  padding: 10px 0 8px 0;
}

.cardHeader.products {
  display: flex;
  padding: 0 10px;
}

.cardHeader text {
  color: #02A69F;
  font-weight: 500;
}

.divider {
  height: 1px;
  background-color: rgba(0, 0, 0, 0.1);
  width: 100%;
}

.totalPrice {
  color: #6d7278;
  font-size: 21px;
  font-weight: 600;
}

.submitOrder {
  padding: 0 120rpx;
  border-radius: 18.5px;
  background-color: #02a69f;
  color: #fff;
  font-size: 16px;
  line-height: 37px;
  margin-right: 0;
  box-shadow: 2px 2px 8px 0 rgba(148, 200, 198, 0.5);
}

text {
  font-size: 16px;
  font-family: "PingFang SC";
}

button {
  border: none;
  border-radius: 0;
  line-height: normal;
}

button::after {
  border: none;
  border-radius: 0;
  line-height: normal;
}

button[disabled] {
  border: none !important;
  color: #fff !important;
  background-color: #adadad !important;
}

.list {
  border-bottom: 1px solid #e5e5e5;
}

.list:first-child {
  border-top: 1px solid #e5e5e5;
}

.productCard .pic {
  width: 30.1vw;
  height: 30.1vw;
  object-fit: contain;
}

.productInfo {
  display: flex;
  flex-direction: column;
  margin-left: 8px;
  flex: 1;
}

.name {
  color: #6d7278;
  font-size: 17px;
  overflow-wrap: break-word;
}


.productInfo .price {
  font-size: 21px;
  font-weight: 600;
  color: #02a69f;
}

.addressField {
  padding: 10px 12px;
}

.addressInfoBox {
  background-color: #E4F5F4;
  display: flex;
  padding: 12px 22px;
  border-radius: 6px;
  margin: 10px 5px;
  justify-content: space-between;
}

.addressInfoBox .innerBox {
  display: flex;
  flex-direction: column;
  margin: 6px 0;
  flex-grow: 1;
}

.addressInfoBox .title {
  color: #02A69F;
  font-weight: 600;
  font-size: 14px;
}

.addressInfoBox .label {
  flex-shrink: 0;
}

.innerBox .addressInfo {
  margin-top: 8px;
}

.innerBox text {
  color: #474747;
  line-height: 20px;
  font-size: 14px;
}

.confirm {
  background-color: #02a69f;
  border-radius: 0;
  border: none;
  color: #fff;
}

.redDot {
  width: 17px;
  height: 17px;
  background-color: #ff6464;
  position: absolute;
  border-radius: 50%;
}

/*swtich整体大小及背景色*/

.wx-switch-input {
  zoom: 0.7;
}

/*模态框*/

.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modalsCancel {
  position: absolute;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottomDialogBody {
  position: absolute;
  z-index: 1000;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
}

.bottomDialogBody view {
  width: 100%;
  border-bottom: 1px solid #e5e5e5;
  text-align: center;
  padding: 16px 0;
}

.bottomDialogBody view:last-child {
  border-bottom: none;
}

.bottomDialogBody text {
  color: #333;
}

/*动画前初始位置*/

.bottomPos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.noProducts,
.noOrders {
  width: 222rpx;
  height: 222rpx;
}

.card.trackingCard {
  padding: 10px;
}

.dealerBox {
  display: flex;
  align-items: center;
  margin-top: 4px;
}

.dealerBox image {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.dealerBox text {
  color: rgba(0, 0, 0, 0.5);
  font-size: 12px;
  margin-left: 7px;
  max-width: 199rpx;
  overflow-wrap: break-all;
}

@media (min-height: 720px) {
  .bottomDialogBody {
    padding-bottom: 22px;
  }
}