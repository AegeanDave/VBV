/* components/pop-up.wxss */
.mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 30px;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 9999;
}

.popupContent {
  position: relative;
  flex-direction: column;
  width: 84%;
  background-color: #fff;
  border-radius: 20rpx;
}

.cancel {
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
  width: 32rpx;
  height: 32rpx;
}

.cancel .image {
  width: 100%;
  height: 100%;
  object-fit: fill;
}